@model List<CommentViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class=" row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Comments</h2>
        </div>
    </div>
</div>

@if (Model.Count() > 0)
{
    <div class="table">
        <form action="RemoveComments" method="post">
            <table>
                <tr>

                    <th>Id</th>
                    <th>Content</th>
                    <th>Date</th>
                    <th>ImageId</th>
                </tr>
                @foreach (var comment in Model)
                {
                    <tr>
                     
                       <td>
                            <input type="checkbox" name="ids" value="@comment.Id" />
                            @comment.Id
                        </td>

                        <td>

                            <a href="UpdateComment?id= @comment.Id"> @comment.Content </a>

                        </td>

                        <td>
                            @comment.Date.ToShortDateString()

                        </td>
                        <td>
                            @comment.ImageId

                        </td>
                    </tr>
                }
            </table>
            <div>
                <input type="submit" value="Remove" class="btn btn-outline-danger" />
            </div>
        </form>
    </div>
}
else
{
    <p>No comments exists.</p>
}
