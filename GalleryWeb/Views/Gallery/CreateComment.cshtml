@model CommentViewModel

<form method="post" asp-action="CreateComment">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Add Comment</h2>
        </div>

        <div class="row ">
            <div class="col-8">
                <div class="form-group row">

                    <div class="col-4">
                        <label asp-for="Content"></label>
                    </div>
                    <div class="col-8">
                        @Html.TextBoxFor(model => Model.Content)
                        @Html.ValidationMessageFor(model => model.Content)

                    </div>
                    <div>
                        @Html.TextBoxFor(x => x.ImageId, new { style = "display: none;",   @Value = Model.ImageId   } )
                    </div>
                    <div>
                        @Html.TextBoxFor(x => x.Id, new { style = "display: none;",   @Value = Model.Id } )
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group row ">
            <div class="col-5 offset-1 row">
                <div class="col">
                    <input type="submit" class="btn btn-info w-100 " value="Create" />
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-success w-100">Back</a>
                </div>
            </div>
        </div>
    </div>
    </form>